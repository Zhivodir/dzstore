<body>

<div class="container test" style="width: 300px;">
    <c:url value="/j_spring_security_check" var="loginUrl" />
    <form action="${loginUrl}" method="post">
        <h2 class="form-signin-heading" style="text-align: center">Please sign in</h2>
        <input type="text" class="form-control" name="j_username" placeholder="Email address" required autofocus value="Guest">
        <input type="password" class="form-control" name="j_password" placeholder="Password" required value="123">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <a href="/registration" style="margin-left: 35%;">Registration</a>
    </form>
</div>

